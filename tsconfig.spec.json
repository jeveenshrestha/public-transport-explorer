{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/setupTests.ts",
    "src/types/svg.d.ts",
    "__mocks__/*.js",
    "jest.setup.ts",
    "src/types/css.d.ts"
  ]
}
